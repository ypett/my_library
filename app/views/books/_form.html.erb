      </div> -->

      <div class="form-group">
        <%= form.label :author_id %>
        <%# form.text_field :author_id, id: :name, class: 'form-control' %>

        <%= form.select :author_id, @authors.collect { |author| [ author.name, author.id ] }, { include_blank: "Please select an author" } %>
      </div>

      <div class="actions form-group">
        <%= form.submit %>
      </div>
    <% end %>

  </div>
</div>
