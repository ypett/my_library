<div class="container">
  <div class="row main">
  <!-- <div class="row main"> -->

    <p id="notice"><%= notice %></p>

    <div class="panel-heading">

      <h1>All Our Books</h1>

      <!-- <table class="table table-striped table-hover"> -->
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <!-- <td><%= book.author_id %></td> -->
              <td><%= book.author.name %></td>
              <td><%= link_to 'Show', book, class: 'btn btn-default' %></td>
              <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning' %></td>
              <td><%= link_to 'Destroy', book, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Book', new_book_path, class: 'btn btn-primary' %>
      <%= link_to 'Authors', authors_path, class: 'btn btn-info' %>

    </div>
  </div>
</div>