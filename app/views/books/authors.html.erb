<div class="container">
  <div class="row">

    <p id="notice"><%= notice %></p>

    <div class="panel-heading">

        <h1>Authors</h1>

        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>ID</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @authors.each do |author| %>
              <tr>
                <td><%= author.name %></td>
                <td><%= author.id %></td>
                <td><%= link_to 'Show', authors_path, class: 'btn btn-warning' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'Books', books_path, class: 'btn btn-info' %>

      </div>

  </div>
</div>
